<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/comments_view"
        android:background="@drawable/layout_selector">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/userImg"
            android:src="@mipmap/ic_launcher"
            android:padding="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/userImg"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/linearLayout">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="潘安"
                    android:id="@+id/user_nickname"
                    android:layout_alignParentTop="true"
                    android:textSize="18dp"
                    android:layout_toEndOf="@+id/userImg" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今天 13:12"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/comments_date"
                    android:textColor="@color/dramGrey"
                    android:textSize="12dp"
                    android:gravity="center"
                    android:layout_toEndOf="@+id/userImg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/timeline_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:id="@+id/comments_content"
                    android:text="恩。这个和随机有所差别。"/>
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/layout_selector"
        android:id="@+id/author_comment_view">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:id="@+id/author_img"
            android:src="@mipmap/ic_launcher"
            android:padding="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/author_img"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dreamer"
                    android:layout_alignParentTop="true"
                    android:textSize="18dp"
                     />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今天 13:12"
                    android:textColor="@color/dramGrey"
                    android:id="@+id/author_comment_date"
                    android:layout_marginLeft="5dp"
                    android:textSize="12dp"
                    android:gravity="center"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/timeline_content"
               >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:id="@+id/author_comment_conent"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:text="恩。这个和随机有所差别。"/>
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</LinearLayout>