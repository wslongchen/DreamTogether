<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <com.example.mrpan.dreamtogether.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/top_bar"/>
    <LinearLayout
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28.0dip"
        android:layout_marginRight="28.0dip"
        android:layout_marginTop="100dp"
        android:background="@drawable/shape_bg"
        android:orientation="vertical" >

        <com.example.mrpan.dreamtogether.view.DeletableEditText
            android:id="@+id/register_loginName"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:background="#00ffffff"
            android:hint="用户名"
            android:inputType="text"
            android:maxLength="11"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingLeft="12.0dip"
            android:textColor="#ff1d1d1d"
            android:textColorHint="#ff666666"
            android:layout_marginRight="2dp"
            android:textSize="16.0sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />

        <com.example.mrpan.dreamtogether.view.DeletableEditText
            android:id="@+id/register_password"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:background="#00ffffff"
            android:gravity="center_vertical"
            android:hint="密码"
            android:singleLine="true"
            android:inputType="textPassword"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="8"
            android:maxLines="1"
            android:paddingLeft="12.0dip"
            android:textColor="#ff1d1d1d"
            android:textColorHint="#ff666666"
            android:layout_marginRight="2dp"
            android:textSize="16.0sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />

        <com.example.mrpan.dreamtogether.view.DeletableEditText
            android:id="@+id/register_password_valid"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:background="#00ffffff"
            android:gravity="center_vertical"
            android:hint="再次输入密码"
            android:inputType="textPassword"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:maxLength="8"
            android:singleLine="true"
            android:maxLines="1"
            android:paddingLeft="12.0dip"
            android:textColor="#ff1d1d1d"
            android:textColorHint="#ff666666"
            android:layout_marginRight="2dp"
            android:textSize="16.0sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />

        <com.example.mrpan.dreamtogether.view.DeletableEditText
            android:id="@+id/register_nickname"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:background="#00ffffff"
            android:gravity="center_vertical"
            android:hint="昵称"
            android:inputType="text"
            android:maxLength="8"
            android:maxLines="1"
            android:paddingLeft="12.0dip"
            android:textColor="#ff1d1d1d"
            android:textColorHint="#ff666666"
            android:layout_marginRight="2dp"
            android:textSize="16.0sp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />

        <com.example.mrpan.dreamtogether.view.DeletableEditText
            android:id="@+id/register_email"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:background="#00ffffff"
            android:gravity="center_vertical"
            android:hint="邮箱"
            android:inputType="text"
            android:paddingLeft="12.0dip"
            android:textColor="#ff1d1d1d"
            android:textColorHint="#ff666666"
            android:layout_marginRight="2dp"
            android:textSize="16.0sp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            >
            <com.example.mrpan.dreamtogether.view.DeletableEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00ffffff"
                android:hint="手机号"
                android:maxLength="11"
                android:inputType="phone"
                android:maxLines="1"
                android:textSize="16.0sp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dp"
                android:id="@+id/register_phone"
                android:paddingLeft="12.0dip"
                android:textColor="#ff1d1d1d"
                android:textColorHint="#ff666666"
                android:layout_marginRight="2dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/register_phone_valied"></com.example.mrpan.dreamtogether.view.DeletableEditText>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送验证码"
                android:layout_margin="2dp"
                android:textColor="#1985ce"
                android:textSize="14dp"

                android:id="@+id/register_phone_valied"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            >
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="我同意"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="2dp"
                android:layout_centerInParent="true"
                android:id="@+id/register_ck"
                ></CheckBox>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginRight="2dp"
                android:layout_toRightOf="@+id/register_ck"
                android:layout_marginLeft="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关于梦想情怀服务协议"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"
                    android:textColor="#1985ce"
                    android:id="@+id/register_tvAboutAgreement"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register"
        android:layout_marginLeft="28.0dip"
        android:layout_marginRight="28.0dip"
        android:layout_marginTop="15.0dip"
        android:background="@drawable/btn_login_selector"
        android:gravity="center"
        android:paddingTop="5.0dip"
        android:text="注  册"
        android:textColor="@color/dreamWhite"
        android:textSize="18.0sp" />
</RelativeLayout>
