<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dreamBlack</item>
        <item name="colorPrimaryDark">@color/dreamBlack</item>
        <item name="colorAccent">@color/dreamYellow</item>
